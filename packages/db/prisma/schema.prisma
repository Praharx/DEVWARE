generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String?
  email String @unique
  password String
  feedback Feedback[]
  ghData GHData[]
  userInsights UserInsights[]
}

model Feedback {
  email String @id
  userRel User @relation(fields: [email], references: [email])
  content String
}

model Post {
  email String @id
  post String
}
    
model GHData {
  email String @id
  userRel User @relation(fields: [email], references: [email])
  content String
}

model UserInsights{
  email String @unique @id
  userRel User @relation(fields: [email], references: [email])
  content String
}


